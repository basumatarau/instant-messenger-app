<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">

    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>front-controller</servlet-name>
        <servlet-class>by.vironit.training.basumatarau.instantMessengerApp.controller.FrontController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>front-controller</servlet-name>
        <url-pattern>/q</url-pattern>
    </servlet-mapping>

    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error-default.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/error-404.jsp</location>
    </error-page>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>by.vironit.training.basumatarau.instantMessengerApp.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>SecurityFilter</filter-name>
        <filter-class>by.vironit.training.basumatarau.instantMessengerApp.filter.SecurityFilter</filter-class>
        <init-param>
            <param-name>unsecuredCommands</param-name>
            <param-value>Logination,Signup,Error</param-value>
        </init-param>
        <init-param>
            <param-name>adminAccess</param-name>
            <param-value>Admin</param-value>
        </init-param>
        <init-param>
            <param-name>userAccess</param-name>
            <param-value>Chat,ContactList,UserProfile</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>SecurityFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
